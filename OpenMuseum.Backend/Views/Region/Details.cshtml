@model OpenMuseum.Models.Region

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-7 col-sm-5">
        <h2>Регион</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">Главная</a>
            </li>
            <li>@Html.ActionLink("Регионы", "Index")</li>
            <li class="active">
                <strong>@Model.Name</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-5 col-sm-7 hidden-xs">
        <div class="row">
            <div class="col-lg-8 col-sm-8">
            </div>
            <div class="col-lg-4 col-sm-4">
                <div class="pull-right">
                    <h2>
                        <a href="@Url.Action("Add")" title="Добавить" class="btn btn-primary btn-circle">
                            <i class="fa fa-plus"></i>
                        </a>
                        <a href="@Url.Action("Edit", new {id = Model.Id })" title="Редактировать" class="btn btn-primary btn-circle">
                            <i class="fa fa-edit"></i>
                        </a>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "col-lg-6 col-sm-6 control-label" })
                                <div class="col-lg-6 col-sm-6">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "col-lg-6 col-sm-6 control-label" })
                                <div class="col-lg-6 col-sm-6">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Description)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Coordinates, new { @class = "col-lg-6 col-sm-6 control-label" })
                                <div class="col-lg-6 col-sm-6">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Coordinates)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.BaseLayer, new { @class = "col-lg-6 col-sm-6 control-label" })
                                <div class="col-lg-6 col-sm-6">
                                    <p class="form-control-static">@Html.ActionLink(Model.BaseLayer.Name, "Details", "BaseLayer", new { id = Model.BaseLayerId }, null)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.Page != null)
            {
                <div class="ibox">
                    <div class="ibox-title">
                        <div class="col-lg-11">
                            <h3>Содержимое присоединённой страницы (<a href="@Url.Action("Details", "Page", new { id = Model.Page.Id })">@Model.Page.Name</a>)</h3>
                        </div>
                        <div class="col-lg-1">
                            <a href="@Url.Action("Add", "DataLayer")" class="btn btn-circle btn-primary" title="Сменить"><i class="fa fa-refresh"></i></a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            @Html.Raw(Model.Page.Content)
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="ibox">
                    <div class="ibox-title">
                        <div class="col-lg-11">
                            <h3>Присоединённая страница</h3>
                        </div>
                        <div class="col-lg-1">
                            <a href="@Url.Action("Add", "DataLayer")" class="btn btn-circle btn-primary" title="Присоединить"><i class="fa fa-pencil"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
