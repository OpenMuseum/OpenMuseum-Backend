@model OpenMuseum.Models.Point

<div class="form-group">
    @Html.LabelFor(model => model.Name, new {@class= "col-lg-6 col-sm-6 control-label" })
    <div class="col-lg-6 col-sm-6">
        @Html.TextBoxFor(model => model.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Description, new { @class = "col-lg-6 col-sm-6 control-label" })
    <div class="col-lg-6 col-sm-6">
        @Html.TextAreaFor(model => model.Description)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Region, new { @class = "col-lg-6 col-sm-6 control-label" })
    <div class="col-lg-6 col-sm-6">
        @Html.DropDownListFor(model => model.RegionId, (IEnumerable<SelectListItem>)ViewBag.ListOfRegions)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Latitude, new { @class = "col-lg-6 col-sm-6 control-label" })
    <div class="col-lg-6 col-sm-6">
        @Html.TextBoxFor(model => model.Latitude)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Longitude, new { @class = "col-lg-6 col-sm-6 control-label" })
    <div class="col-lg-6 col-sm-6">
        @Html.TextBoxFor(model => model.Longitude)
    </div>
</div>